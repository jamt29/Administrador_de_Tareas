@model TareasCompletadas.Models.TaskItem

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-12 d-flex justify-content-center align-items-center">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Eliminar Tarea</h5>
                    </div>
                    <div class="modal-body text-center">
                        <p>¿Esta seguro de eliminar la tarea?</p>
                        <i class="bi bi-trash" style="font-size: 5rem; color: red"></i>
                    </div>
                    <div class="modal-footer">
                        <form asp-action="Delete">
                            <a asp-action="Index" type="button" class="btn btn-secondary" >Regresar</a>
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Eliminar" class="btn btn-danger" /> 
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    
   
